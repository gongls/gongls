extends layout.pug
block content
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Please Sign In
            .panel-body#login
                fieldset
                  .form-group
                    p {{message}}
                    input(v-model="return_url",type="hidden",value=return_url)
                  .form-group
                    input.form-control(v-model="name",placeholder='UserName', name='name', type='text', autofocus='')
                  .form-group
                    input.form-control(v-model="pass",placeholder='PassWord', name='password', type='password', value='')
                  .checkbox
                    label
                      input(name='remember', type='checkbox', value='Remember Me')
                      span Remember Me
                  // Change this to a button or input when using this as a form
                  button.btn.btn-lg.btn-success.btn-block(v-on:click="login") Login
